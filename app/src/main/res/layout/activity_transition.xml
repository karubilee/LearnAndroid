<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context=".RecyclerView.Activity.Transition.TransitionActivity">

    <Button
        android:id="@+id/transition_button"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="B"
        android:layout_marginTop="200dp"
        app:layout_constraintBottom_toTopOf="@+id/transition_button1"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent" />

    <Button
        android:id="@+id/transition_button1"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginBottom="8dp"
        android:text="B1"
        app:layout_constraintEnd_toEndOf="@+id/transition_button"
        app:layout_constraintStart_toStartOf="@+id/transition_button"
        app:layout_constraintTop_toBottomOf="@+id/transition_button"
        app:layout_constraintBottom_toTopOf="@+id/transition_button2"/>

    <Button
        android:id="@+id/transition_button2"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="B2"
        app:layout_constraintEnd_toEndOf="@+id/transition_button1"
        app:layout_constraintStart_toStartOf="@+id/transition_button1"
        app:layout_constraintTop_toBottomOf="@+id/transition_button1"
        app:layout_constraintBottom_toTopOf="@id/transition_button3"/>

    <Button
        android:id="@+id/transition_button3"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="B3"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintEnd_toEndOf="@+id/transition_button2"
        app:layout_constraintStart_toStartOf="@+id/transition_button2"
        app:layout_constraintTop_toBottomOf="@+id/transition_button2"
        android:layout_marginBottom="200dp"/>

    <Button
        android:id="@+id/b4"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginStart="30dp"
        android:layout_marginTop="20dp"
        android:text="b4"
        app:layout_constraintRight_toLeftOf="@id/b5"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="@+id/b5" />

    <Button
        android:id="@+id/b5"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginTop="50dp"
        android:text="b5"
        app:layout_constraintLeft_toRightOf="@id/b4"
        app:layout_constraintRight_toLeftOf="@id/b6"
        app:layout_constraintTop_toBottomOf="@+id/transition_button3" />

    <Button
        android:id="@+id/b6"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginTop="20dp"
        android:layout_marginEnd="30dp"
        android:text="B6"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintLeft_toRightOf="@id/b5"
        app:layout_constraintTop_toTopOf="@+id/b5" />


</androidx.constraintlayout.widget.ConstraintLayout>